# 配置示例文件
# 复制为 .env 文件并根据需要修改

# API配置
API_TITLE=ICD Auto Coder Backend
API_VERSION=1.0.0

# 模型配置
MODEL_DIR=models
AVAILABLE_MODELS=["CAML", "DCAN", "Fusion", "TransICD"]
DEFAULT_MODEL=CAML

# 调试模式配置
USE_MOCK_MODE=true  # 是否使用模拟模式（无模型调试，用于前端界面开发）
USE_MODEL_API=false  # 是否使用模型API（true=使用真实模型API，false=使用模拟数据）

# 模型API配置（仅在USE_MODEL_API=true时使用）
MODEL_API_BASE_URL=http://localhost:8001  # 模型服务基础URL
MODEL_API_URLS={}  # 各模型的API URL，例如: {"CAML": "http://localhost:8002/predict", "DCAN": "http://localhost:8003/predict"}
MODEL_API_TIMEOUT=30  # API调用超时时间（秒）

# LLM配置
LLM_PROVIDER=openai  # openai, anthropic, local
LLM_MODEL=gpt-4
LLM_API_KEY=
LLM_BASE_URL=

# 知识图谱配置
GRAPH_DB_TYPE=json  # json, neo4j, nebula
GRAPH_DB_URL=
ICD_HIERARCHY_PATH=app/data/icd_hierarchy.json
UMLS_MAPPINGS_PATH=app/data/umls_mappings.json

# 数据库配置
DATABASE_TYPE=json  # json, mysql, mongodb
DATABASE_URL=

# 预测配置
TOP_K=10
PREDICTION_THRESHOLD=0.5

# 预处理配置
MAX_TEXT_LENGTH=512
REMOVE_STOPWORDS=true
KEEP_NUMBERS=true

